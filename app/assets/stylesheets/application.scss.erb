// CUSTOM
// Custom bootstrap variables must be set or imported *before* bootstrap.
@import "bootstrap/scss/bootstrap";
@import "toastr";
// Required Core Stylesheet
@import "@glidejs/glide/src/assets/sass/glide.core";

// Optional Theme Stylesheet
@import "@glidejs/glide/src/assets/sass/glide.theme";


nav.navbar{
    min-height: 68px;
    position: fixed;
    width: 100vw;
    z-index: 9991;

}

.toast{
    z-index: 9999;
}

body{
    width:100vw;
    height:100vh;
    background:#eee;
}

body > .container{
    padding-top: 6.5rem;
}

.row.venue-profile{
    margin-top: -3.5rem;
}

.card{
    box-shadow: 0px 1px 7px rgba(0,0,0,0.1)
}

nav {padding: 0.5rem 1rem};

.form-inline {
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
}

.rounded-circle.avatar{
    width:36px;
    height:36px;
}

.home-page-venues{
    width:32%
}

.row .home-page-venues:not(:last-child){
    margin-right:2%;
    margin-bottom: 45px;
}

.row .home-page-venues{
    margin-bottom: 45px;
}

// SEARCH PAGE

#pages.container.search{
    margin-left:unset !important;
}

#main #left .row{
    margin:0 !important;
    width: 100%;
}

#main {
    height: 100%;
    // overflow: hidden;
}

#left{
    // padding: 10px 400px 10px 20px;
    // overflow: scroll;
    padding-left:2rem;
    height: 100%;
    // padding-top: 3.5rem;
}

#right{
    position: fixed;
    top: 68px;
    right: 0;
    width: 35%;
    height: calc(100% - 68px);
}

.map_price{
    text-align:center;
    font-size: 16px;
    font-weight:600;
    color: #555;
    padding-right:10px;
}

.card-img-top{
    max-height: 20vh;
    -o-object-fit: cover;
       object-fit: cover;
}

// GLIDE JS
li.glide__slide{
    margin-top:auto;
    margin-bottom:auto;
}

.glide--carousel{
    max-height:600px;
    overflow:hidden;
}

#main-splash{
    width:100vw; 
    height:650px;
    background:red;
    position: absolute;
    left:0;
    top:0;
    
    background: linear-gradient(90deg, rgba(2,0,36,0.3001401244091386) 0%, rgba(0,0,0,0.5326331216080182) 100%), url(<%= image_url('main-splash.jpg') %>) no-repeat center;
    background-size: cover;
    
}