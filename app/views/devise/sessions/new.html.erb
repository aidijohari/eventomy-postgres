<div class="row mt-5">
  <div class="col-md-4 offset-4">
    <h2 class="text-center mb-3">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control"  %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group">
          <%= f.check_box :remember_me %> Remember me
        </div>
      <% end %>
      <span class="pull-right">
        <%= link_to "Forgot Password?", new_user_password_path %>
      </span>

      <div class="actions form-group">
        <%= f.submit "Log in", class: "btn btn-primary w-100 mt-2" %>
        <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-warning w-100 mt-2" %>
      </div>
    <% end %>
    
    <%# <%= render "devise/shared/links" %>
    <hr>
    <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, class: 'btn btn-primary w-100' %>

  </div>
</div>

