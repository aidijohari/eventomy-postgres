<div class="row">
    <div class="col-md-3">
        <div class="card">
            <%= image_tag avatar_url(@user), class: "avatar-full" %> 
            <div class="card-body">
                <h5 class="card-title">Verification</h5>
                <p class="card-text">
                    Email Address
                    <br>
                    Phone Number
                </p>

            </div>
        </div>
        
    </div>
    <div class="col-md-9">
        <h2>
            <%= @user.fullname %>
        </h2>
        <div class="description row-space-3">
            <%= @user.description %>
        </div>
    </div>
</div>