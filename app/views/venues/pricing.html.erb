<div class="row">
    <div class="col-3">
        <%= render 'venue_menu' %>
    </div>
    
    <div class="col-9">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Venue Pricing</h5>
                <div class="card-text">

                    <%= form_for @venue do |f| %>
                        <div class="row">
                            <div class="col-4">
                                <div class="form-group">
                                    <label>Pricing:</label>
                                    <%= f.text_field :price, placeholder: "eg: RM100", class: "form-control" %>
                                </div>
                            </div>
                        </div>

                        <div><%= f.submit "Save", class: "btn btn-success" %></div>
                    <% end %>

                </div>
            </div>
        </div>
    </div>

</div>